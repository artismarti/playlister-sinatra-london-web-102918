<% require "pry" %>

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Songs</title>
  </head>
  <body>
    <h1>Edit Song</h1>
    <h2><%=@song.name %></h2>
    <form class="" action="/songs/<%=@song.name%>" method="post">
      <input type="hidden" name="_method" value="patch">
      <p>Update Genres</p>

      <%@genres.each do|g| %>
        <input type="checkbox" name="<%=g.id%>" value="<%= g.name%>" <%='checked' if @song_genres.ids.include?(g.id) %>> <%= g.name%></input>
      <% end %>
      <input type="submit" name="" value="update">
    </form>


    <h2>Song Artist:</h2>
    <p><a href="/artists/<%=@song_artist.slug%>"><%= @song_artist.name %></a></p>
    <h2>Song Genres:</h2>
    <ul>
      <%@song_genres.each do|g| %>
        <li><a href="/genres/<%=g.slug%>"><%= g.name %></a></li>
        <% end %>
    </ul>
  </body>
</html>
